  <script src="./js/logout.js"></script>
  {{else}}
  <div class="mx-auto">
    <a href="/login">
      <button type="button"
        class="flex px-2 py-1 bg-black text-blue-300 font-medium text-xs uppercase rounded shadow-md hover:bg-blue-300 hover:text-slate-900 hover:shadow-lg active:outline-none active:ring-0 active:bg-slate-800 active:shadow-lg transition duration-150 ease-in-out">
        Login</button>
    </a>
  </div>
  {{/if}}
