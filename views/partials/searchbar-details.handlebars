<form id="search" class="flex h-8 mx-2 items-center">
  <button id="searchbtn" type="submit" class="btn bg-transparent">
    <span
      class="flex items-center px-3 text-base font-normal text-gray-100 text-center whitespace-nowrap rounded pointer-events-none"
      id="basic-addon2">
