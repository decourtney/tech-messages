<!-- LEFT PANEL -->
<section id="left-panel" class="flex w-full bg-slate-400 text-gray-100 overflow-auto no-scrollbar">
  <div class="flex-col w-full overflow-auto no-scrollbar">

    <!-- PANEL HEADER -->
    <section id="leftPanelHeader"
      class="sticky flex flex-col md:flex-col xl:flex-row justify-between items-center top-0 px-6 p-0 lg:pt-4 pb-4 w-full border-b-4 border-blue-200 bg-slate-500 z-10">
      <h2 class="py-1 font-semibold text-3xl">{{pageTitle}}</h2>
      <div class="flex justify-between items-center">
        <div class="flex h-8 mx-2" id="searchBar">
          <span
            class="flex items-center px-3 py-1.5 text-base font-normal text-gray-100 text-center whitespace-nowrap rounded"
            id="basic-addon2">
            <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="search" class="w-4" role="img"
              xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
              <path fill="currentColor"
                d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z">
              </path>
            </svg>
          </span>
          <input type="search"
            class="w-full max-w-sm px-3 py-1 border border-solid border-gray-400 rounded caret-black focus:outline-none"
            placeholder="Search">
        </div>
      </div>
      {{!-- New Post BTN --}}
      <div id="newpost-btn" class="mx-3">
        <div>
          <button id="create-post" type="button"
            class="btn inline-block px-3 pb-1 bg-black text-blue-300 leading-tight uppercase rounded shadow-md hover:bg-blue-300 hover:text-slate-900 hover:shadow-lg active:outline-none active:ring-0 active:bg-slate-800 active:shadow-lg transition duration-150 ease-in-out {{#if logged_in}}visible{{else}}invisible{{/if}}">
            <span class="text-xs font-semibold pointer-events-none">Create</span></button>
        </div>
      </div>
    </section>

    {{#if partial}}
    {{> (lookup . 'partial')}}
    {{/if}}

  </div>
</section>

<!-- RIGHT PANEL -->
<section id="right-panel"
  class="flex-col w-full h-screen overflow-x-hidden  p-4 shadow-lg bg-blue-200 text-gray-700 md:rounded-t-md rounded-br-md">
  <div class="flex-col h-full shadow-md pt-4 px-6 bg-slate-100 rounded-lg overflow-auto no-scrollbar">

    <div id="right-panel-details">
      <!-- Cards inserted from JS -->
    </div>
    <script src="/js/posts.js"></script>

  </div>
</section>